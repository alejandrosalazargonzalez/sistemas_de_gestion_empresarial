<odoo>
  <data>
    <record model="ir.ui.view" id="lista_tareas.list">
      <field name="name">lista_tareas.view.list</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tarea" />
          <field name="prioridad" />
          <field name="urgente" />
          <field name="realizada" />
          <field name="asignado_a" />
        </tree>
      </field>
    </record>
    <record id="lista_tareas_view_form" model="ir.ui.view">
      <field name="name">lista_tareas.view.form</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="tarea" />
            </group>
            <group>
              <field name="prioridad" />
              <field name="urgente" />
            </group>
            <group>
              <field name="realizada" />
              <field name="asignado_a" />
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="lista_tareas_view_graph" model="ir.ui.view">
      <field name="name">lista_tareas.view.graph</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <graph string="Tareas asignadas" type="bar">
          <field name="id" type="measure" />
          <field name="realizada" type="col" />
          <field name="asignado_a" type="row" />
        </graph>
      </field>
    </record>

    <record model="ir.actions.act_window" id="lista_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">lista_tareas.lista_tareas</field>
      <field name="view_mode">tree,form,graph</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Listado de tareas" id="lista_tareas.menu_root" />

    <!-- menu categories -->
    <menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_1" parent="lista_tareas.menu_root" />

    <!-- actions -->
    <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1"
      action="lista_tareas.action_window" />

  </data>
</odoo>